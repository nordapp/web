						org.osgi.framework,
						<!-- org.osgi.framework.wiring, -->
						<!-- org.osgi.util.tracker, -->
						org.slf4j
					</Import-Package>
					<Private-Package></Private-Package>
					<!--<Export-Service></Export-Service>-->
