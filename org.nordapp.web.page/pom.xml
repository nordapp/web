  <build>
	<plugins>
		<plugin>
			<groupId>org.apache.felix</groupId>
			<artifactId>maven-bundle-plugin</artifactId>
			<version>2.3.7</version>
			<extensions>true</extensions>
			<configuration>
				<instructions>
					
					<Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
					<Bundle-Name>${project.name}</Bundle-Name>
					<Bundle-Version>${project.version}</Bundle-Version>
					<Bundle-Activator>org.nordapp.web.page.activator.NordApp</Bundle-Activator>
					
					<!-- Shiro -->
					<Bundle-ClassPath>.,WEB-INF/classes,{maven-dependencies}</Bundle-ClassPath>
					<Embed-Directory>WEB-INF/lib</Embed-Directory>
					<!--<Embed-Dependency>*;scope=compile|runtime</Embed-Dependency>-->
					<Embed-Transitive>true</Embed-Transitive>
					
					
					<Export-Package>
						org.nordapp.web.page.activator,
						org.nordapp.web.servlet,
						org.nordapp.web.util,
						org.nordapp.web.util.link
					</Export-Package>
					<Import-Package>
						com.google.gson;version=2.3.1,
						javax.servlet,
						javax.servlet.annotation,
						javax.servlet.descriptor,
						javax.servlet.http,
						org.apache.commons.codec.binary,
						org.apache.commons.fileupload;version=1.3.1,
						org.apache.commons.fileupload.disk;version=1.3.1,
						org.apache.commons.fileupload.servlet;version=1.3.1,
						org.apache.commons.io,
						<!-- -->org.apache.shiro,
						org.apache.shiro.authc,
						org.apache.shiro.authz,
						org.apache.shiro.config,
						org.apache.shiro.crypto,
						org.apache.shiro.crypto.hash,
						org.apache.shiro.mgt,
						org.apache.shiro.realm,
						org.apache.shiro.session,
						org.apache.shiro.session.mgt,
						org.apache.shiro.session.mgt.eis,
						org.apache.shiro.subject,
						org.apache.shiro.util,<!--  -->
						org.eclipse.jetty.server,
						org.i3xx.step.mongo.core.activator;version="${org.i3xx.step.mongo.version}",
						org.i3xx.step.mongo.core.model;version="${org.i3xx.step.mongo.version}",
						org.i3xx.step.mongo.core.impl;version="${org.i3xx.step.mongo.version}",
						org.i3xx.step.mongo.core.util;version="${org.i3xx.step.mongo.version}",
						org.i3xx.step.mongo.service.impl;version="${org.i3xx.step.mongo.version}",
						org.i3xx.step.mongo.service.model;version="${org.i3xx.step.mongo.version}",
						org.i3xx.step.clock.service.model;version="${org.i3xx.step.clock.version}",
						org.i3xx.step.fileinfo.service.model;version="${org.i3xx.step.fileinfo.version}",
						org.i3xx.step.due.service.impl;version="${org.i3xx.step.due.version}",
						org.i3xx.step.due.service.model;version="${org.i3xx.step.due.version}",
						org.i3xx.step.uno.impl.service;version="${org.i3xx.step.uno.version}",
						org.i3xx.step.uno.model.daemon;version="${org.i3xx.step.uno.version}",
						org.i3xx.step.uno.model.service;version="${org.i3xx.step.uno.version}",
						org.i3xx.step.zero.security;version="${org.i3xx.step.zero.version}",
						org.i3xx.step.zero.security.impl.shiro;version="${org.i3xx.step.zero.version}",
						org.i3xx.step.zero.security.model;version="${org.i3xx.step.zero.version}",
						org.i3xx.step.zero.service.impl.mandator;version="${org.i3xx.step.zero.version}",
						org.i3xx.step.zero.service.model.mandator;version="${org.i3xx.step.zero.version}",
						org.i3xx.util.basic.io;version="${org.i3xx.util.basic.version}",
